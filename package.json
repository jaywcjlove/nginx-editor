{
  "name": "monaco-editor-nginx",
  "version": "1.0.0",
  "description": "Nginx language for Monaco Editor.",
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "scripts": {
    "doc": "kkt build --app-src ./website",
    "start": "kkt start --app-src ./website",
    "build": "npm run build:lib && npm run doc",
    "build:lib": "npm run ts:build && npm run types:esm && npm run types:cjs && npm run css:build",
    "watch": "npm run ts:watch & npm run types:watch & npm run css:watch",
    "types:build": "tsbb types --sourceRoot src --target ESNEXT",
    "types:watch": "npm run types:esm -- --watch & npm run types:cjs -- --watch",
    "types:esm": "npm run types:build -- --outDir ../lib/esm",
    "types:cjs": "npm run types:build -- --outDir ../lib/cjs",
    "css:build": "compile-less -d src -o lib/esm",
    "css:watch": "compile-less -d src -o lib/esm --watch",
    "ts:watch": "tsbb watch --env-name esm:dev --env-name cjs --target react",
    "ts:build": "tsbb build --target react",
    "get:nginx": "ts-node --project scripts/tsconfig.json scripts/directives.ts",
    "prettier": "prettier --write \"**/*.{js,jsx,tsx,ts,less,md,json}\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kktjs/kkt.git"
  },
  "author": "",
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,tsx,ts,less,md,json}": [
      "prettier --write \"**/*.{js,jsx,tsx,ts,less,md,json}\""
    ]
  },
  "peerDependencies": {
    "@babel/runtime": ">=7.10.0",
    "monaco-editor": ">=0.22.3",
    "react": ">=16.9.0",
    "react-dom": ">=16.9.0"
  },
  "files": [
    "src",
    "lib"
  ],
  "dependencies": {
    "prop-types": "15.7.2"
  },
  "devDependencies": {
    "@kkt/less-modules": "6.6.2",
    "@kkt/raw-modules": "6.6.2",
    "@kkt/scope-plugin-options": "6.6.2",
    "@uiw/react-monacoeditor": "3.0.0",
    "@types/turndown": "5.0.0",
    "@types/react": "17.0.0",
    "@types/react-dom": "17.0.0",
    "cheerio": "1.0.0-rc.5",
    "compile-less-cli": "1.7.0",
    "domhandler": "4.0.0",
    "node-fetch": "3.0.0-beta.9",
    "husky": "4.3.8",
    "kkt": "6.6.2",
    "lint-staged": "10.5.4",
    "monaco-editor": "0.22.3",
    "monaco-editor-webpack-plugin": "3.0.0",
    "prettier": "2.2.1",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "turndown": "7.0.0",
    "ts-node": "9.1.1",
    "tsbb": "2.0.7"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
